gpt2.download_gpt2(model_name='124M')
sess = gpt2.start_tf_sess()
gpt2.load_gpt2(sess)

import os
from pptx import Presentation
import gpt_2_simple as gpt2
from nltk.tokenize import sent_tokenize

def generate_summary(text, summary_length=100):
    # Tokenize the text into sentences
    sentences = sent_tokenize(text)

    # Concatenate the sentences into a single string
    input_text = " ".join(sentences)

    # Generate summary using GPT-2
    summary = gpt2.generate(sess, prefix=input_text, length=summary_length, temperature=0.7, return_as_list=True)[0]

    return summary
