import numpy as np
import pandas as pd
import seaborn as sns
from sklearn.cluster import KMeans
import matplotlib.pyplot as plt

# Generate or load your data (X)

# Specify the number of clusters (change this to your desired number)
n_clusters = 4

# Perform K-means clustering
kmeans = KMeans(n_clusters=n_clusters)
cluster_labels = kmeans.fit_predict(X)

# Add cluster labels to your data (assuming X is a DataFrame)
X['Cluster'] = cluster_labels

# Create a Seaborn scatterplot with cluster colors
sns.set(style='whitegrid')
plt.figure(figsize=(10, 6))
sns.scatterplot(data=X, x='Feature1', y='Feature2', hue='Cluster', palette='viridis', s=100)

# Plot the cluster centers (optional)
cluster_centers = kmeans.cluster_centers_
plt.scatter(cluster_centers[:, 0], cluster_centers[:, 1], c='red', marker='x', s=200, label='Cluster Centers')

plt.title(f'K-means Clustering with {n_clusters} Clusters')
plt.legend()
plt.show()