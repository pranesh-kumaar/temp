import pandas as pd
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

# Load your dataset
data = pd.read_csv('data.csv')

# Extract the three features and cluster labels
net_worth = data['Net Worth']
investment = data['Investment']
liabilities = data['Liabilities']
cluster_labels = data['Cluster']

# Create a 3D scatter plot
fig = plt.figure()
ax = fig.add_subplot(111, projection='3d')

# Define a colormap for clusters
colormap = plt.cm.get_cmap('tab20', len(set(cluster_labels)))

# Plot data points for each cluster with different colors
for cluster in set(cluster_labels):
    cluster_data = data[data['Cluster'] == cluster]
    ax.scatter(cluster_data['Net Worth'], cluster_data['Investment'], cluster_data['Liabilities'], label=f'Cluster {cluster}', c=colormap(cluster))

ax.set_xlabel('Net Worth')
ax.set_ylabel('Investment')
ax.set_zlabel('Liabilities')
ax.legend()

plt.show()