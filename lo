# Plot K-Means clusters
plt.figure(figsize=(12, 6))
plt.subplot(1, 3, 1)
plt.scatter(features['Net Worth ($)'], features['Investable Assets ($)'], c=features['KMeans_Cluster'], cmap='viridis')
plt.title('K-Means Clusters')

# Plot DBSCAN clusters
plt.subplot(1, 3, 2)
plt.scatter(features['Net Worth ($)'], features['Investable Assets ($)'], c=dbscan.labels_, cmap='viridis')
plt.title('DBSCAN Clusters')

# Identify outliers based on DBSCAN
outliers = dbscan.labels_ == -1

# Plot outliers
plt.subplot(1, 3, 3)
plt.scatter(features['Net Worth ($)'], features['Investable Assets ($)'], c=outliers, cmap='viridis')
plt.title('Outliers (DBSCAN-based)')

plt.tight_layout()
plt.show()