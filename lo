import numpy as np
import pandas as pd
from scipy.cluster.hierarchy import linkage, dendrogram
import plotly.graph_objects as go

# Load or create your client data as a DataFrame
client_data = pd.read_csv('your_client_data.csv')  # Replace with your data file

# Perform hierarchical clustering
linked = linkage(client_data, method='ward')  # You can choose a different linkage method

# Create a dendrogram
dendro = dendrogram(linked, orientation='top')

# Convert the dendrogram to a Plotly figure
fig = go.Figure(data=dendro)

# Customize the appearance of the dendrogram (optional)
fig.update_layout(
    title="Interactive Hierarchical Clustering Dendrogram",
    xaxis_title="Client IDs",
    yaxis_title="Distance",
)

# Show the interactive plot
fig.show()