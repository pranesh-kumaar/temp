import numpy as np
from sklearn.cluster import KMeans
from sklearn.datasets import make_blobs
import matplotlib.pyplot as plt

# Generate sample data
data, _ = make_blobs(n_samples=300, centers=4, cluster_std=0.60, random_state=0)

# Calculate within-cluster sum of squares for different values of k
wcss = []
for i in range(1, 11):
    kmeans = KMeans(n_clusters=i, init='k-means++', max_iter=300, n_init=10, random_state=0)
    kmeans.fit(data)
    wcss.append(kmeans.inertia_)

# Find the elbow point using the "knee" of the curve
distances = []
for i in range(1, 11):
    kmeans = KMeans(n_clusters=i, init='k-means++', max_iter=300, n_init=10, random_state=0)
    kmeans.fit(data)
    distances.append(sum(np.min(np.sqrt(np.sum((data - kmeans.cluster_centers_[kmeans.labels_]) ** 2, axis=1)), axis=0)))

elbow_point = np.argmin(np.diff(distances)) + 1

# Plot the distances and the elbow point
plt.figure(figsize=(8, 6))
plt.plot(range(1, 11), distances, marker='o')
plt.title('Elbow Method')
plt.xlabel('Number of Clusters')
plt.ylabel('Distances')
plt.xticks(range(1, 11))
plt.annotate(f'Elbow Point: {elbow_point}', xy=(elbow_point, distances[elbow_point - 1]), xytext=(elbow_point + 1, distances[elbow_point - 1] + 5),
             arrowprops=dict(facecolor='black', shrink=0.05))
plt.show()

print("Suggested number of clusters:", elbow_point)